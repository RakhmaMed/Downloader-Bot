BOT_TOKEN=your_bot_token_here

# Bot execution mode: "polling" (default) or "webhook"
BOT_MODE=polling

# Webhook settings (required if BOT_MODE=webhook)
# Public HTTPS endpoint served by nginx
WEBHOOK_HOST=https://your-domain.example.com
# Path must match nginx location that proxies to the bot
WEBHOOK_PATH=/telegram/webhook
# Optional shared secret for Telegram webhook verification
WEBHOOK_SECRET=change_me

# Local server bind settings (nginx should proxy to this)
WEBHOOK_PORT=8081
WEBHOOK_LISTEN=0.0.0.0


